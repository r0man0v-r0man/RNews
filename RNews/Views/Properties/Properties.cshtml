@model RNews.Models.ViewModels.PropertyViewModel

@{
    ViewData["Title"] = "Properties";
}
    
<div class="row justify-content-center">
    <div class="col-md-8">
        <h4 class="text-center font-weight-light">@Model.Name</h4>
        <hr />
        <form>
            <div class="form-group row">
                <label for="staticName" class="col-sm-2 col-form-label font-weight-bold">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="staticName" value="@Model.Name">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label font-weight-bold">E-Mail</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control-plaintext" id="staticEmail" value="@Model.Email">
                </div>
            </div>
        </form>
        
        
    </div>
</div>

