@model List<RNews.Models.ViewModels.Admin.AdminCategoryViewModel>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Categories</h1>
<hr />
<div>
    <h4>Total Categories: @Model.Count</h4>

    <input id="what-search" type="text" placeholder="Search..." class="form-control border-0" />
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody id="where-search">
                @foreach (var category in Model)
                {
                <tr>
                    <td>@category.Name</td>
                    
                    <td>@Html.ActionLink("Delete", "DeleteCategory", "Admin", new { id = category.Id }, new { @class = "btn btn-sm btn-danger" })</td>
                    
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>


@section Scripts{
    <script src="~/js/Admin.js"></script>
}
