@model RNews.Models.ViewModels.EditPostViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<div class="row">
    <div class="col-md-8">
        <br />
        <hr />
        <form method="post" asp-action="Edit" asp-controller="Publication" >
            <div class="form-group row">
                <label for="staticDescription" class="col-sm-2 col-form-label font-weight-bold text-right">Description:</label>
                <div class="col-sm-10">
                    <input asp-for="Description" type="text" class="form-control-plaintext" id="staticDescription" placeholder="Your Description">
                </div>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary btn-block">Save</button>
            </div>
        </form>
    </div>

</div>
