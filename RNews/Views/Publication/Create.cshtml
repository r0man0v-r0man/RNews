@model RNews.Models.ViewModels.PostCreateViewModel
@{
    ViewData["Title"] = "Publications";
}
<head>
    <link href="~/simplemde/simplemde.min.css" rel="stylesheet" />
</head>
<hr />
<div class="row">

    <div class="col-md-8">
        <h3>New Publication</h3>
        <br />
        <hr />

        <form method="post" asp-action="Create" asp-controller="Publication" enctype="multipart/form-data">
            <div class="form-group row">
                <label for="staticTitle" class="col-sm-2 col-form-label font-weight-bold text-right">Title:</label>
                <div class="col-sm-10">
                    <input asp-for="Title" type="text" class="form-control-plaintext" id="staticTitle" value="" placeholder="Your Title">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticTitle" class="col-sm-2 col-form-label font-weight-bold text-right">Image:</label>
                <div class="col-sm-10">
                    <input asp-for="Image" type="file">
                </div>
            </div>

            <div class="form-group">
                <textarea asp-for="Content" id="post-text"></textarea>
            </div>
            <div class="form-group row">
                <label for="staticDescription" class="col-sm-2 col-form-label font-weight-bold text-right">Description:</label>
                <div class="col-sm-10">
                    <input asp-for="Description" type="text" class="form-control-plaintext" id="staticDescription" value="" placeholder="Your Description">
                </div>
            </div>
            <div class="form-group row">
                <label for="staticCategory" class="col-sm-2 col-form-label font-weight-bold text-right">Category:</label>
                <div class="col-sm-10">
                    <select asp-for="Category" asp-items="@Html.GetEnumSelectList<RNews.DAL.Category>()" class="selectpicker form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Publish</button>
            </div>
        </form>
    </div>

</div>
@*<textarea id="code" rows="10" cols="50"></textarea>*@

@section Scripts{
    <script src="~/simplemde/simplemde.min.js"></script>
    <script src="~/lib/inline-attachment.js"></script>
    <script src="~/lib/codemirror-4.inline-attachment.js"></script>
    <script src="~/js/simplemde.js"></script>
}


